<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@color/backgroundColor"
                                             android:layout_height="110dp">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/cardBackgroundColor"
            app:layout_constraintTop_toTopOf="parent" app:cardBackgroundColor="@color/cardBackgroundColor"
            app:cardCornerRadius="17dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp" android:layout_marginEnd="5dp" app:cardElevation="5dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp">

            <TextView
                    android:text="I am Subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendanceSubjectTF" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp" android:textColor="@color/textPrimaryColor"
                    android:textStyle="bold"/>
            <TextView
                    android:text="CA - 1101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendanceTotalTF" android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/attendanceSubjectTF"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp" android:textColor="@color/textPrimaryLighterColor"/>
            <TextView
                    android:text="Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp" android:layout_marginBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/textPrimaryLighterColor"/>
            <TextView
                    android:text="Present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9" android:layout_marginBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/textPrimaryLighterColor"
                    android:layout_marginEnd="20dp" app:layout_constraintEnd_toStartOf="@+id/textView8"/>
            <TextView
                    android:text="Absent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/textView9"
                    android:layout_marginEnd="20dp" android:textColor="@color/textPrimaryLighterColor"/>
            <TextView
                    android:text="99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendanceAbsentTF" app:layout_constraintStart_toStartOf="@+id/textView11"
                    app:layout_constraintEnd_toEndOf="@+id/textView11" android:textColor="@color/textDanger"
                    app:layout_constraintBottom_toTopOf="@+id/textView11" android:textAlignment="center"
                    android:textStyle="bold" android:textSize="18sp"/>
            <TextView
                    android:text="99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendancePresentTF" app:layout_constraintStart_toStartOf="@+id/textView9"
                    app:layout_constraintEnd_toEndOf="@+id/textView9"
                    app:layout_constraintBottom_toTopOf="@+id/textView9" android:textColor="@color/textPrimaryColor"
                    android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"/>
            <TextView
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendancePercentageTF" app:layout_constraintEnd_toEndOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintBottom_toTopOf="@+id/textView8" android:textColor="@color/textSuccess"
                    android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>